<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Hello World!"
        android:background="#313236
"
        android:id = "@+id/view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/vector"
        android:padding="20dp"
        android:text = "Smoking"
        android:textColor="@color/white"
        android:drawablePadding="40dp"
        android:textSize="22sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/home"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:id = "@+id/cardview"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src = "@drawable/cig"
            android:layout_margin="20dp"
           


/>

    </androidx.cardview.widget.CardView>
  <TextView
      android:layout_width="450px"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/cardview"
      app:layout_constraintStart_toStartOf="parent"
      android:drawableStart="@drawable/line"
      android:drawablePadding="10dp"

      android:text = "Punjab 1st in India to Ban Cigarette"
      android:textStyle="bold"
      android:textColor="@color/black"
      android:textSize="15sp"
      android:layout_marginLeft="42dp"
      android:layout_marginTop="20dp"
      android:id = "@+id/tv1"

      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cigrate_block"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="670dp"
    android:background="@color/black"
    android:text = "Published at 12:00 pm"
    android:textColor="#FFFFFF
"
    android:textStyle="normal"
    android:textSize="14sp"
    android:padding="10dp"
/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>